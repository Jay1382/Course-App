<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:id="@+id/cardView"/>

    <ImageView
        android:id="@+id/courseimageId"
        android:layout_width="391dp"
        android:layout_height="226dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/happy_woman"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/courseTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/courseimageId"
        android:layout_alignLeft="@+id/courseimageId"
        android:layout_alignEnd="@+id/courseimageId"
        android:layout_alignRight="@+id/courseimageId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="1dp"
        android:text="@string/app_name"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/authorimageID"
        android:src="@drawable/ic_launcher_round"
        app:srcCompat="@drawable/ic_launcher_round"
        android:layout_alignStart="@+id/courseimageId"
        android:layout_alignLeft="@+id/courseimageId"
        android:layout_alignEnd="@+id/courseimageId"
        android:layout_alignRight="@+id/courseimageId"
        android:layout_width="79dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="290dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="37dp"
        app:civ_border_width="3dp"
        app:civ_border_color="#FF000000"/>

